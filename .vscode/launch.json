    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/backend/.env",
            "cwd": "${workspaceFolder}/backend",
            "justMyCode": true
        },
        {
            "name": "Python: All files",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": false
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
              "host": "localhost",
              "port": 5680
            },
            "justMyCode": false,
        },
        {
            "name": "Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.routes:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "jinja": true
        }
    ]
}
